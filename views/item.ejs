<!DOCTYPE html>
<html lang = "en">
<head>
   <meta charset = "utf-8">
   <title><%= data.title %></title>
   <link rel = "stylesheet" type="text/css" href="../../assets/css/style.css">
   <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
   <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.3.1/css/all.css" integrity="sha384-mzrmE5qonljUremFsqc01SB46JvROS7bZs3IO2EmfFsd15uHvIt+Y8vEf7N7fWAU" crossorigin="anonymous">
</head>
<body>
   <%- include('partials/header.ejs', {userName:userName}); %>
   <%- include('partials/user-navigation.ejs',{loginButton:loginButton}); %>
    <% include partials/site-navigation.ejs %>
   <main class="itemList">
         <a href="/categories" class="return-category"><i class="fas fa-chevron-circle-left"></i>  Return to Category</a>
    <div class="linkbar">
       <a href="/">Home ></a>
       <a href="/categories">Categories ></a>
       <span>Item </span><br><br>
    </div>
     <div>
      <img src="/assets/images/<%= data.item.itemCode %>.jpg" alt="Item picture" class="item-photo" >
      <h2 class="item"><%= data.item.itemName %></h2>
      <p class="categoryType"><%= data.item.catalogCategory %></p>
      <p class="star">
         <% var j= data.item.rating; %>
            <% for(var k=0; k< 5; k++){
                  if(j>0){ %>
                      <span class="fa fa-star checked"></span>
                    <%	j--;
                    }
                    else{ %>
                       <span class="fa fa-star"></span>
              <%		}
                  } %>
               </p>
     </div>
     <div class="itemfooter">
        <% if(data.flag == 0){ %>
        <form action="/save" method="POST" class="form">
         <input type="hidden" name="itemCode" value="<%= data.item.itemCode %>" />
         <button type="submit" name="action" value="save">Save it</button>
         </form>
         <% } %>
        <a href="/feedback/<%=data.item.itemCode%>" class="button">Rate it</a>
       <br>
       <br>
       <br>
       <p><%=data.item.description%></p>
     </div>
   </main>
   <% include partials/footer.ejs %>
</body>
</html>
